<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232321"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faculty Menu"
        android:textColor="#fff"
        android:textSize="24dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <TextView

            android:layout_weight="1.7"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Select Date"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    <EditText
        android:id="@+id/DateEditText"
        android:layout_weight="1.7"
        android:layout_width="0dp"
        android:padding="8dp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:editable="false"
        android:ems="10"/>

        <ImageButton
            android:id="@+id/DateImageButton"
            android:layout_width="0dp"
            android:background="#232321"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="0.8"
            android:padding="10dp"
            android:cropToPadding="true"
            android:src="@drawable/calendar_icon" />
</LinearLayout>



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/textView1"
        android:layout_weight="2"
        android:textColor="#fff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:text="Select dept"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spinner1"

        android:backgroundTint="#fff"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:padding="10dp"
        android:layout_height="wrap_content"

         />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/textView2"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:text="Select year"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spinneryear"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:padding="10dp"
        android:backgroundTint="#fff"

        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView3"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_height="wrap_content"

        android:text="Subject"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spinnerSE"
        android:layout_weight="3"
        android:backgroundTint="#fff"
        android:layout_width="0dp"
        android:padding="10dp"

        android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:background="#fff"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:text="Add Attendance" />

    <Button
        android:id="@+id/viewTotalAttendanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginBottom="20dp"
        android:textColor="#000"
        android:text="View Total Attendance" />

    <Button
        android:id="@+id/viewAttendancebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginBottom="35dp"
        android:background="#fff"
        android:text="View Attendance" />

    <Button
        android:id="@+id/Logbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_marginBottom="80dp"
        android:onClick="Logout"
        android:background="#fff"
        android:text="Logout" />

</LinearLayout>
</ScrollView>